@{
    ViewBag.Title = "JobScheduler";
}
<style>
    th {
        padding-bottom: 10px;
        padding-right: 40px;
    }
</style>
<script>
    $(document).ready(function () {
        $("#btnTpcj").click(function () {

            var url = $("#txtUrl").val();
            var k1 = $("#txtKey1").val();
            var v1 = $("#txtVal1").val();
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetDetails", "JobScheduler")',
                    data: { url: url,key:k1,val:v1 },
                    dataType: "json",
                    success: function () {

                        //window.location.href = '';
                    },
                    error: function (ex) {
                        var r = jQuery.parseJSON(ex.responseText);
                        alert(ex.responseText);
                    }
                });

        });
    });
</script>
<h2>Job Scheduler</h2>

<section>

    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item waves-effect waves-light">
            <a class="nav-link active" id="tpcj-tab" data-toggle="tab" href="#tpcj" role="tab" aria-controls="tpcj" aria-selected="true">Tenants Pool Controller Job</a>
        </li>
        <li class="nav-item waves-effect waves-light">
            <a class="nav-link" id="rpftj-tab" data-toggle="tab" href="#rpftj" role="tab" aria-controls="rpftj" aria-selected="false">Remove Pool For Tenants Job</a>
        </li>
        <li class="nav-item waves-effect waves-light">
            <a class="nav-link" id="tluj-tab" data-toggle="tab" href="#tluj" role="tab" aria-controls="tluj" aria-selected="false">Tenant LROS Update Job</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        @* First tab *@
        <div class="tab-pane fade active" id="tpcj" role="tabpanel" aria-labelledby="tpcj-tab">
            <br />
            <table>
                <tr>
                    <th colspan="2">URL &nbsp;<input type="url" id="txtUrl" pattern="https://.*" style="min-width:650px;display:inherit" class="form-control" /></th>
                </tr>
                <tr>
                    <th>Key &nbsp;<input type="text" id="txtKey1" style="display:inherit" class="form-control" /></th>
                    <th>Value &nbsp;<input type="text" id="txtVal1" style="display:inherit" class="form-control" /></th>
                </tr>
                <tr>
                    <th>Key &nbsp;<input type="text" id="txtKey2" style="display:inherit" class="form-control" /></th>
                    <th>Value &nbsp;<input type="text" id="txtVal2" style="display:inherit" class="form-control" /></th>
                </tr>
                <tr>
                    <th>
                        <div class="form-group">
                            <input type="button" value="Submit" id="btnTpcj" class="btn btn-success" style="background-color:#607d8b" />
                        </div>
                    </th>
                </tr>
            </table>
            <label id="lblError" class="alert-danger"></label>
            <label id="lblSuccess" class="alert-success"></label>
        </div>
        @* Second tab *@
        <div class="tab-pane fade" id="rpftj" role="tabpanel" aria-labelledby="rpftj-tab">

        </div>
        @* Third tab *@
        <div class="tab-pane fade" id="tluj" role="tabpanel" aria-labelledby="tluj-tab">

        </div>
    </div>

</section>

